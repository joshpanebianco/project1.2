<div class="row">
	<div class="col-1 text-center">
		<div id="vote-actions-<%= @post_id %>" data-id="<%= post.id %>" class="vote">
			<div class="fa fa-arrow-up upvote <%= is_upvoted @post %>"></div>
			<span class="font-weight-bold score"><%= @post.score %></span>
			<div class="fa fa-arrow-down downvote<%= is_downvoted @post %>"></div>
		</div>
	</div>
<div class="col-11">

		<h2><%= @posts.title %></h2>

		<%= simple_format @posts.body %>

		<div id="post-comments">
		  <%= render partial: "posts/comments", locals: { comments: @posts.comments } %>
		</div>

		<h5>Leave a comment</h5>
		<%= form_for @comment, remote: true do |f| %>
		   <%= f.hidden_field :post_id, value: @posts.id %>
			 <%= f.text_area :message, placeholder: "Your comment goes here", class: "form-control" %>
		   <%= f.submit "Submit Comment", class: "btn btn-success mt-3" %>
		<% end %>
 </div>
</div>
